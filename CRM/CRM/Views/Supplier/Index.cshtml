@{
}
@using EntityLayer
@model List<Suppliers>


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-2">
        <h2>Tedarikçiler</h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addSupplierModal">+ Yeni Tedarikçi</button>
    </div>
    <div class="input-group mb-3  w-50">
        <input type="text" class="form-control" id="searchInput" placeholder="Filtrele">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" id="clearFilter">Temizle</button>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Tedarikçi Adı</th>
                <th>İletişim E-posta</th>
                <th>İletişim Telefon</th>
                <th>Şehir</th>
                <th>Son İşlem</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody id="supplierTable">
            @foreach (var supplier in Model)
            {
                <tr>
                    <td>@supplier.SupplierId</td>
                    <td>@supplier.Name</td>
                    <td>@supplier.ContactMail</td>
                    <td>@supplier.ContactPhone</td>
                    <td>@supplier.ContactCity</td>
                    <td>@supplier.LastOperation.ToShortDateString()</td>
                    <td>
                        @if (supplier.IsActive)
                        {
                            <span class="status-active" style="color: green;font-weight: bold;">Aktif</span>
                        }
                        else
                        {
                            <span class="status-inactive" style="color: red;font-weight: bold;">Pasif</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-primary">Düzenle</button>
                        <button class="btn btn-sm btn-info">Detay</button>
                        <button class="btn btn-sm btn-danger">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- Yeni Müşteri Ekle Modal -->
<div class="modal fade" id="addSupplierModal" tabindex="-1" aria-labelledby="addSupplierModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddSupplier" asp-controller="Supplier" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Yeni Tedarikçi Ekle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Tedarikçi Adı</label>
                        <input name="Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>İletişim E-posta</label>
                        <input type="email" name="ContactMail" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>İletişim Telefon</label>
                        <input name="ContactPhone" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Şehir</label>
                        <input name="ContactCity" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Durum</label>
                        <select name="IsActive" class="form-select" required>
                            <option value="true">Aktif</option>
                            <option value="false">Pasif</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#searchInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('#supplierTable tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        $('#clearFilter').on('click', function () {
            $('#searchInput').val('');
            $('#supplierTable tr').show();
        });
    });
</script>
